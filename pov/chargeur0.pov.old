#include "colors.inc"
#include "woods.inc"
#include "finish.inc"
#include "texture_jeu.inc"

#declare M_PI = 3.141592654;

#declare Avance=clock;

// *** Définition de la scène pour le test ***
// *******************************************
camera {
	location <0,250,0>
//	location <20,22,-30>
	look_at <0,5,0>
	angle 6.5
//	angle 40
	right <1,0,0>
}

light_source { <-30,170,30> color White*0.6
	fade_distance 200 fade_power 2
}
light_source { <10,10,0> color White*0.8
	fade_distance 50
	rotate <0,Avance*360,0>	
}

// *** Fond d'ecran ***
// ********************
#declare Fond=object {
	plane { y,0 }
	texture {
	  pigment { color Black }
	  finish {
	       specular 0.1
	  }
	}
}

// *** Définition du mécanisme ***
// *******************************
#declare Loco=union {
	 union {
	       cylinder { <0,0,0> <0,20,0>,0.5 }
	       sphere { <0,0,0>,1.5 scale <1,0.2,1> translate <0,20,0> }
	       texture { T_Gold_4D }
	 }

	 union {
	 	 difference {
			    sphere { <0,0,0>,3 }
			    sphere { <0,0,0>,2.9 }
			    texture { Ruby_Glass }
			    finish { ambient 0.8 }
			    translate <10,10,0>
		}
		cylinder { <0,20,0> <7,13,0>,0.3 texture { T_Gold_4D } } 
		sphere { <7,13,0>,0.6 texture { T_Gold_4D } }
		rotate <0,Avance*360,0>
	}
}

// *** Définition de la scene ***
// ******************************
union { 
//      object { Fond }

      object { Loco }
      scale 1
}